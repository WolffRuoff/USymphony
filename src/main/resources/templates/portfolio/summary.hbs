<messageML>

    <table>
        <tr>
            <td style="border: none;"> <h1 style="text-align:center;">Overall value: ${{evaluation}}</h1></td>
            <td style="border: none;"> <h1 style="text-align:center;">Unrealized Gains: {{gains unrealizedGains}}</h1></td>
        </tr>
    </table>

    <div style='height:2px;background:#0098ff;margin-top:10px;margin-bottom:10px'> </div>

    <h2> Portfolio Summary: {{name}}</h2>

    <h3> Top 5 Gainers:</h3>
    <table>
            
        <thead>
                    
        <tr>
                            
            <td>Ticker:</td>
                            
            <td>Company Name:</td>
                            
            <td>Price:</td>
                            
            <td>Daily Change:</td>
                        
        </tr>
                
        </thead>

        <tbody>
            
            {{#each top10Stocks}}
            
            <tr>            
                <td><cash tag="{{symbol}}"/></td>
                <td> {{companyName}} </td>
                <td> {{latestPrice}} </td>
                <td> {{#if (isPos change)}} <emoji shortcode = "chart_with_upwards_trend"/>  <span style="color:green;"> {{change}}% </span> </td>
                        {{else}}  {{#if (isNeg change)}}  <emoji shortcode = "chart_with_downwards_trend"/>  <span style="color:red;"> {{change}}% </span> </td>
                            {{else}} 
                                No Change </td>
                            {{/if}}
                        {{/if}}   
            </tr>    

            {{/each}}

        </tbody>

    </table>
    <h3> Top 5 Losers:</h3>
    <table>
            
        <thead>
                    
        <tr>
                            
            <td>Ticker:</td>
                            
            <td>Company Name:</td>
                            
            <td>Price:</td>
                            
            <td>Daily Change:</td>
                        
        </tr>
                
        </thead>

        <tbody>
            
            {{#each bottom10Stocks}}
            
            <tr>            
                <td><cash tag="{{symbol}}"/></td>
                <td> {{companyName}} </td>
                <td> {{latestPrice}} </td>
                <td> {{#if (isPos change)}} <emoji shortcode = "chart_with_upwards_trend"/>  <span style="color:green;"> {{change}}% </span> </td>
                        {{else}}  {{#if (isNeg change)}}  <emoji shortcode = "chart_with_downwards_trend"/>  <span style="color:red;"> {{change}}% </span> </td>
                            {{else}} 
                                No Change </td>
                            {{/if}}
                        {{/if}}   
            </tr>    
            
            {{/each}}

        </tbody>

    </table>

    <div style='height:2px;background:#0098ff;margin-top:10px;margin-bottom:10px'> </div>

    <div style="text-align: center;">
    <table>
        <tr>
            <td style="border: none;">
                <div style="margin-top:6%">
                        <h2> Percentage Currently Invested: {{portionLiquid}}% </h2>
                </div>
            </td>
            <td style="border: none;">
                {{pieChart portionLiquid}}
            </td>

            <td style="border: none;"> 
                <div style="margin-top:6%">
                    <h2>
                        {{#if (isPos compPercent)}} 
                            This Portfolio Is Exceeding {{comparisonTicker}} by <span style="color:green;"> +{{compPercent}}% </span> 
                        {{else}}  
                            {{#if (isNeg compPercent)}} 
                                This Portfolio Is Down from {{comparisonTicker}} by <span style="color:red;"> {{compPercent}}% </span> 
                            {{else}} 
                                This portfolio is even with {{comparisonTicker}} in the past 24 hrs 
                            {{/if}}
                        {{/if}} 
                    </h2> 
                </div>
            </td>
        </tr>
    </table>
  </div>
</messageML>
